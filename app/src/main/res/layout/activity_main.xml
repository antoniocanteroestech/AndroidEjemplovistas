<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/fondo2"
        android:scaleType="centerInside"
        android:contentDescription="@string/iv_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text"
            android:drawableStart="@drawable/ic_arrow_forward_black"
            android:drawablePadding="5dp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text"
            android:drawableEnd="@drawable/ic_arrow_back_black"
            android:drawablePadding="5dp"/>

        <ImageButton
            android:id="@+id/imbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tag_faces_black"
            android:contentDescription="@string/ib_content"
            android:padding="12.6sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/tgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_text"
            android:textOn="Si"
            android:textOff="No"/>

        <Switch
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <CheckBox
            android:id="@+id/chbx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chbx2_text"
            />

        <CheckBox
            android:id="@+id/chbx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chbx1_text"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:hint="@string/et_text"
        android:textColor="@color/colorPrimaryDark"
        android:padding="20sp"/>


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:text=""
        android:padding="15sp"
        android:background="@color/colorPrimaryLight"/>


</LinearLayout>